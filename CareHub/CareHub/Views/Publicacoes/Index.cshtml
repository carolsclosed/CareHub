@model IEnumerable<CareHub.Models.Posts>

@{
    ViewData["Title"] = "Index";
}

<h1>Indice</h1>

<p>
    <a asp-action="Criar">Criar nova publicação</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TituloPost)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Categoria)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Foto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DataPost)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Utilizador)
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.TituloPost)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Categoria)
        </td>
        <td>
            <img style="max-width: 200px;" src="@item.Foto" />
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DataPost)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Utilizador.Nome)
        </td>
        
        
        <td>
            @if (@item.Utilizador.Nome == User.Identity.Name)
            {
                <a asp-action="Edit" asp-route-id="@item.IdPost">Editar</a> 
            }
            
            <a asp-action="Details" asp-route-id="@item.IdPost">Detalhes</a> |
            <a asp-action="Delete" asp-route-id="@item.IdPost">Apagar</a>
        </td>
    </tr>
}
    </tbody>
</table>
