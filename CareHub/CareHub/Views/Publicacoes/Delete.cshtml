@model CareHub.Models.Posts

@{
    ViewData["Title"] = "Apagar";
}

<h1 class="text-center mb-4" style="color: #4A2D4C;">Apagar Publicação</h1>

<h3 class="text-center mb-4" style="color: #7d4e92;">Tem a certeza que deseja apagar esta publicação?</h3>

<div class="rounded shadow-lg p-4 mb-4" style="background-color: #f8dfff; border: 3px solid #3e1f39;">
    <h4 class="mb-3" style="color: #4A2D4C;">Fotografias</h4>
    <hr style="border-top: 2px solid #7d4e92;" />

    <dl class="row">
        <dt class="col-sm-2 fw-semibold" style="color: #4A2D4C;">
            @Html.DisplayNameFor(model => model.TituloPost)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TituloPost)
        </dd>

        <dt class="col-sm-2 fw-semibold" style="color: #4A2D4C;">
            @Html.DisplayNameFor(model => model.Categoria)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Categoria)
        </dd>

        <dt class="col-sm-2 fw-semibold" style="color: #4A2D4C;">
            @Html.DisplayNameFor(model => model.Foto)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Foto)
        </dd>

        <dt class="col-sm-2 fw-semibold" style="color: #4A2D4C;">
            @Html.DisplayNameFor(model => model.DataPost)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DataPost)
        </dd>

        <dt class="col-sm-2 fw-semibold" style="color: #4A2D4C;">
            @Html.DisplayNameFor(model => model.Utilizador)
        </dt>
        <dd class="col-sm-10">
            @Model.Utilizador?.Nome
        </dd>
    </dl>

    <form asp-action="Delete" class="mt-4 d-flex justify-content-between align-items-center">
        <input type="hidden" asp-for="IdPost" />
        <div>
            <input type="submit" value="Apagar" class="btn btn-danger rounded-pill px-4 me-2" onclick="return confirm('Tem a certeza que deseja apagar esta publicação?');" />
            <a asp-action="Index" class="btn btn-outline-secondary rounded-pill px-4" style="color: #4A2D4C; border-color: #4A2D4C;">Voltar às Publicações</a>
        </div>
    </form>
</div>
