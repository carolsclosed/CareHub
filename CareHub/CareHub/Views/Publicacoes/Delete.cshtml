@model CareHub.Models.Posts

@{
    ViewData["Title"] = "Apagar";
}

<h1>Apagar</h1>

<h3>Tem a certeza que deseja apagar esta publicação?</h3>
<div>
    <h4>Fotografias</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.TituloPost)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TituloPost)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Categoria)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Categoria)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Foto)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Foto)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DataPost)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DataPost)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Utilizador)
        </dt>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="IdPost" />
        <input type="submit" value="Apagar" class="btn btn-danger" placeholder="Apagar" /> |
        <a asp-action="Index">Voltar às publicações</a>
    </form>
</div>
