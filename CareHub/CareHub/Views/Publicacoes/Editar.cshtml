@model CareHub.Models.Posts

@{
    ViewData["Title"] = "Editar";
}

<h1 class="mb-4 text-center" style="color: #4A2D4C;">Editar a publicação</h1>

<hr />

<div class="row justify-content-center">
    <div class="col-md-8 col-lg-6">
        <div class="p-4 shadow rounded" style="background-color: #f8dfff; border: 3px solid #3e1f39;">
            <form asp-action="Editar" enctype="multipart/form-data" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <input type="hidden" asp-for="IdPost" />
                <input type="hidden" type="datetime" name="DataPost" />

                <div class="form-floating mb-3">
                    <input asp-for="TituloPost" class="form-control border-0 shadow-sm" placeholder="Título da publicação" />
                    <label asp-for="TituloPost">Título</label>
                    <span asp-validation-for="TituloPost" class="text-danger"></span>
                </div>

                <div class="form-floating mb-3">
                    <input asp-for="Categoria" class="form-control border-0 shadow-sm" placeholder="Categoria" />
                    <label asp-for="Categoria">Categoria</label>
                    <span asp-validation-for="Categoria" class="text-danger"></span>
                </div>

                <div class="form-floating mb-3">
                    <textarea asp-for="TextoPost" class="form-control border-0 shadow-sm" placeholder="Conteúdo da publicação" style="height: 120px;"></textarea>
                    <label asp-for="TextoPost">Texto</label>
                    <span asp-validation-for="TextoPost" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Foto" class="form-label">Foto</label>
                    <input type="file" name="imagem" class="form-control border-0 shadow-sm" />
                    <span asp-validation-for="Foto" class="text-danger"></span>
                </div>
                
                @if (!string.IsNullOrEmpty(Model.Foto))
                {
                    <div class="mb-3 text-center">
                        <p class="mb-2">Foto atual:</p>
                        <img src="/@Model.Foto" alt="Foto atual" class="img-fluid rounded shadow" style="max-height: 200px;" />
                    </div>
                }

                <button type="submit" class="btn btn-primary w-100 rounded-pill shadow-sm" style="background-color: #007bff; border-color: #007bff;">
                    Guardar alterações
                </button>
            </form>
        </div>
    </div>
</div>

<div class="mt-3 text-center">
    <a asp-action="Index" class="btn btn-link" style="color: #4A2D4C;">&larr; Voltar às publicações</a>
</div>
