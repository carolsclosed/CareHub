
@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}


<div class="container mt-5" style="background-color: #146c43">
    <div class="card shadow p-4" style="background-color: #badbcc">
        <h3 class="mb-4 text-center" style="font-family: 'American Typewriter'">Agende a sua consulta com a CareHub!</h3>
        <form>
            <div class="mb-3">
                <label for="nome" class="form-label">Nome Completo</label>
                <input type="text" class="form-control" id="nome" placeholder="Insira o seu nome completo">
            </div>

            <div class="mb-3">
                <label for="telefone" class="form-label">Contacto Telefónico</label>
                <input type="text" class="form-control" id="telefone" placeholder="Ex: 912345678">
            </div>

            <div class="mb-3">
                <label for="email" class="form-label">E-mail</label>
                <input type="email" class="form-control" id="email" placeholder="Ex: exemplo@email.com">
            </div>

            <div class="mb-3">
                <label for="regiao" class="form-label">Região</label>
                <input type="text" class="form-control" id="regiao" placeholder="Ex: Leiria">
            </div>

            <div class="mb-3">
                <label for="descricao" class="form-label">Descrição</label>
                <textarea class="form-control" id="descricao" rows="3" placeholder="Descreva o motivo da consulta"></textarea>
            </div>
        
        <div class="text-center">
            <button type="submit" class="btn btn-primary px-4">Submeter</button>
        </div>
        </form>
    </div>    
    </div>