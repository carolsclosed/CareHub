@page
@model RegisterConfirmationModel
@{
    ViewData["Title"] = "Confirmação de registo";
}

<h1>@ViewData["Title"]</h1>

@{
    if (Model.DisplayConfirmAccountLink)
    {
        <p>
            Esta aplicação ainda não tem um serviço de envio de email configurado. Consulta <a href="https://aka.ms/aspaccountconf">estes documentos</a> para saber como configurar um serviço real de envio de email.<br />
            Normalmente, o email seria enviado com este link: <a id="confirm-link" href="@Model.EmailConfirmationUrl">Clique aqui para confirmar a sua conta</a>
        </p>
    }
    else
    {
        <p>
            Por favor, verifique o seu email para confirmar a sua conta.
        </p>
    }
}